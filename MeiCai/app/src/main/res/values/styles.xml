<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--tabBar  LinerLayout的样式-->
    <style name="tabBar_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--tabBar  ImageView的样式-->
    <style name="tabBar_icon_style">
        <item name="android:layout_width">64px</item>
        <item name="android:layout_height">54px</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">20px</item>
    </style>

    <!--tabBar  TextView的样式-->
    <style name="tabBar_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:textColor">@color/tab_menu_text</item>
    </style>



    <!--我的— 组textView 样式  我的钱包  我的订单-->
    <style name="mine_section_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--我的— 组button样式  查看全部订单 -->
    <style name="mine_section_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color9</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:drawableRight">@mipmap/right_arrow</item>
        <item name="android:textSize">12sp</item>
    </style>




    <!--我的——帮助中心 按钮样式-->
    <style name="mine_help_center_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:paddingTop">15dp</item>
    </style>



</resources>
